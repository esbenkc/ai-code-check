{
  "name": "karnak",
  "displayName": "Karnak",
  "description": "üîê Make sure AI applications are not injecting 1) suspicious API calls, 2) vulnerabilities, and 3) rogue capabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openScanningWindow"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Code Scanning Extension Configuration",
      "properties": {
        "codeScanningExtension.openaiApiKey": {
          "type": "string",
          "description": "OpenAI API key for code scanning"
        }
      }
    },
    "commands": [
      {
        "command": "extension.openScanningWindow",
        "title": "Karnak"
      }
    ]
  },
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "repository": "https://github.com/esbenkc/karnak",
  "dependencies": {
    "openai": "^4.29.2"
  }
}
